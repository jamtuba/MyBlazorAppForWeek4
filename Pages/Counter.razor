@page "/counter"

<h1>Counter</h1>

<p>Nuværende count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Læg til</button>

<button class="btn btn-primary" @onclick="DecrementCount">Træk fra</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount {get; set;} = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }

    private void DecrementCount()
    {
        currentCount -= IncrementAmount;
    }
}
